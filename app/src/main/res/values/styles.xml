<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="shoe_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:fontFamily">@font/alfa_slab_one</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="text_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/brown</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="backgroundTint">@color/brown</item>
    </style>

</resources>